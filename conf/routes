# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/passwords					info.stephenn.passwordsafe.password.PasswordCtrl.list
GET		/passwords/:id				info.stephenn.passwordsafe.password.PasswordCtrl.get(id: String)
POST	/passwords/-1				info.stephenn.passwordsafe.password.PasswordCtrl.create
POST	/passwords/:id				info.stephenn.passwordsafe.password.PasswordCtrl.update(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
